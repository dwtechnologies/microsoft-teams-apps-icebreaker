{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.3/MicrosoftTeams.schema.json",
  "manifestVersion": "1.3",
  "version": "1.0.0",
  "id": "d55d08d9-bacb-4567-942f-afd85d632dcc",
  "packageName": "com.microsoft.teams.icebreaker",
  "developer": {
    "name": "Daniel Wellington",
    "websiteUrl": "https://www.danielwellington.com/global/",
    "privacyUrl": "https://www.danielwellington.com/global/privacy-policy/",
    "termsOfUseUrl": "https://www.danielwellington.com/global/terms/"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Bring Your Own Coffee - BYOC"
  },
  "description": {
    "short": "BYOC is a cute little bot that randomly pairs you up with a colleague.",
    "full": "BYOC is a cute little bot that randomly pairs you up with a colleague every other week to get the social game back on. Let's meet up for a 30 minute coffee chat to talk about private/work related things, get to know each other and DW better!"
  },
  "accentColor": "#64A2CC",
  "bots": [
    {
      "botId": "<bot id>",
      "scopes": [
        "personal",
        "team"
      ],
      "supportsFiles": false,
      "isNotificationOnly": true
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "<app domain>"
  ]
}